{
	"editor.formatOnSave": true,
	"editor.formatOnSaveMode": "modificationsIfAvailable",
	"editor.rulers": [
		80,
		120
	],
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"stylelint.validate": [
		"html",
		"scss",
		"css",
		"astro",
	],
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"astro",
		"typescript",
		"typescriptreact"
	],
	"[astro]": {
		"editor.formatOnSave": false,
	}
}
