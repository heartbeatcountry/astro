						class="offcanvas offcanvas-end bleu"
						tabindex="-1"
						id="offcanvasDarkNavbar"
					>
						<div class="offcanvas-header">
							<h5
								class="offcanvas-title"
								id="offcanvasDarkNavbarLabel"
							>
								Menu
